import java.awt.*;
import java.awt.event.*;
import javax.swing.*;



public class GameMain extends JPanel implements MouseListener {
	// Constants for game
	
	// number of ROWS by COLS cell constants
	public static final int ROWS = 3;
	public static final int COLS = 3;
	public static final String TITLE = "Tic Tac Toe"; // text found in the windows title bar

	// constants for dimensions used for drawing
	
	// cell width and height
	public static final int CELL_SIZE = 100; //a box, both width and height in pixels
	// drawing canvas - frame
	public static final int CANVAS_WIDTH = CELL_SIZE * COLS;
	public static final int CANVAS_HEIGHT = CELL_SIZE * ROWS;
	// Noughts and Crosses are displayed inside a cell, with padding from border
	public static final int CELL_PADDING = CELL_SIZE / 5;
	public static final int SYMBOL_SIZE = CELL_SIZE - CELL_PADDING * 2;
	public static final int SYMBOL_STROKE_WIDTH = 8;

	/* declare game object variables */
	
	// the game board
	private Board board;
	// sets current game state
	private GameState currentState;
	// the current player
	private Player currentPlayer;
	// for displaying game status message
	private JLabel statusBar;

	/* Constructor to setup the UI and game components on the panel */
	public GameMain() {

		// This JPanel fires a MouseEvent on MouseClicked
		JPanel panel = new JPanel(); // holds game logic

		// Register for mouse events on panel and game
		addMouseListener(this); // add a listener to see if the mouse has clicked on the game board

		// Setup the status bar (JLabel) to display status message
		statusBar = new JLabel("   ");
		statusBar.setFont(new Font(Font.DIALOG_INPUT, Font.BOLD, 14)); //style of characters
		statusBar.setBorder(BorderFactory.createEmptyBorder(2, 5, 4, 5)); //making the empty boarder shape for peices
		statusBar.setOpaque(true);
		statusBar.setVisible(true); //showing statusbar is visible
		statusBar.setBackground(Color.LIGHT_GRAY);

		// layout of the panel is in border layout
		panel.setLayout(new BorderLayout());
		panel.add(statusBar, BorderLayout.SOUTH);
		
		// extra accounts for statusBar height in overall height
		panel.setPreferredSize(new Dimension(CANVAS_WIDTH + 10, CANVAS_HEIGHT + 30));

		// Create a new instance of the game Board class.
		board = new Board();
		// initialize the game board
		initGame();

	}

	public static void main(String[] args) {
		// Run GUI code in Event Dispatch thread for thread safety.
		
		javax.swing.SwingUtilities.invokeLater(new Runnable() {
			public void run() {
				
				// create a main window to contain the panel
				JFrame frame = new JFrame(TITLE);

				//creating window
				frame.setContentPane(new GameMain()); // attaching code to the GUI
				frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
				
				//frame.pack(); // TODO see why not working properly
				frame.setSize(CANVAS_WIDTH + 20, CANVAS_HEIGHT + 50); // for testing it works
				frame.setLocationRelativeTo(null);
				frame.setVisible(true);
				
				// TODO fix - having to adjust it to get full screen, cells not showing
				// creating a new panel
				JPanel panel = new JPanel();
				frame.add(panel); // adding panel to frame
			
				panel.setBackground(Color.BLUE);
				panel.setLayout(new GridLayout(ROWS, COLS));
				panel.setVisible(true);
				
				
			}
		});
	}

	/** Custom painting codes on this JPanel */
	public void paintComponent(Graphics g) { //is called via repaint()
		
		// fill background and set colour to white
		super.paintComponent(g);
		setBackground(Color.LIGHT_GRAY); // background colour

		// ask the game board to paint itself
		board.paint(g);

		// set status bar message
		if (currentState == GameState.Playing){ //TODO 
			statusBar.setForeground(Color.BLACK);
			if (currentPlayer == Player.Cross) {

				// status bar to display the message "X"'s Turn
				statusBar.setText("X your turn");

			} else {

				// status bar to display the message "O"'s Turn
				statusBar.setText("O your turn");
			}

			// changing colours and showing text depending on what game state is identified
		} else if (currentState == GameState.Draw) { // if a draw
			statusBar.setForeground(Color.RED);
			statusBar.setText("It's a Draw! Click to play again.");

		} else if (currentState == GameState.Cross_won) { // if Cross wins
			statusBar.setForeground(Color.RED);
			statusBar.setText("'X' Won! Click to play again.");

		} else if (currentState == GameState.Nought_won) { // if Nought wins
			statusBar.setForeground(Color.RED);
			statusBar.setText("'O' Won! Click to play again.");
		}
	}

	/**
	 * Initialise the game-board contents and the current status of GameState and
	 * Player)
	 */
	public void initGame() {
		
		for (int row = 0; row < ROWS; ++row) {
			for (int col = 0; col < COLS; ++col) { // checking if each cell is empty
				board.cells[row][col].content = Player.Empty;
			}
		}
		// displays if cells are empty making sure game continues
		currentState = GameState.Playing;
		currentPlayer = Player.Cross;
	}

	/**
	 * After each turn check to see if the current player hasWon by putting their
	 * symbol in that position, If they have the GameState is set to won for that
	 * player If no winner then isDraw is called to see if deadlock, if not
	 * GameState stays as PLAYING
	 * 
	 */
	public void updateGame(Player thePlayer, int row, int col) {

		// checking for win after each play
		if (board.hasWon(thePlayer, row, col)) {
			currentState = (thePlayer == Player.Cross) ? GameState.Cross_won : GameState.Nought_won;
			
		} else if (board.isDraw()) { // if it is a draw

			// setting displays the currentstate to the draw gamestate
			currentState = GameState.Draw;
		}
		// otherwise no change to current state of playing


	}

	/**
	 * Event handler for the mouse click on the JPanel. If selected cell is valid
	 * and Empty then current player is added to cell content. UpdateGame is called
	 * which will call the methods to check for winner or Draw. if none then
	 * GameState remains playing. If win or Draw then call is made to method that
	 * resets the game board. Finally a call is made to refresh the canvas so that
	 * new symbol appears
	 */

	public void mouseClicked(MouseEvent e) { // tell the game what to do in event of a mouse click

		// get the coordinates of where the click event happened
		int mouseX = e.getX();
		int mouseY = e.getY();

		// Get the row and column clicked
		int rowSelected = mouseY / CELL_SIZE;
		int colSelected = mouseX / CELL_SIZE;

		if (currentState == GameState.Playing) {
			if (rowSelected >= 0 && rowSelected < ROWS && colSelected >= 0 && colSelected < COLS
					&& board.cells[rowSelected][colSelected].content == Player.Empty) {
				// players move
				board.cells[rowSelected][colSelected].content = currentPlayer;
				// update currentState
				updateGame(currentPlayer, rowSelected, colSelected);

				// Switching between players when mouse click activated
				if (currentPlayer == Player.Cross) {
					currentPlayer = Player.Nought; // switch to Nought
				} else {
					currentPlayer = Player.Cross; // switch to Cross
				}
			}
		} else {
			// shows game is over, then restart the game
			initGame();
		}
		// redraw the graphics on the GUI/game
		repaint();
	}

	@Override
	public void mousePressed(MouseEvent e) {
		// Auto-generated, event not used

	}

	@Override
	public void mouseReleased(MouseEvent e) {
		// Auto-generated, event not used

	}

	@Override
	public void mouseEntered(MouseEvent e) {
		// Auto-generated,event not used

	}

	@Override
	public void mouseExited(MouseEvent e) {
		// Auto-generated, event not used

	}

}

